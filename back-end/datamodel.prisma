enum Permission {
  ADMIN
  USER
}

type Address {
  id: ID! @unique
  street1: String!
  street2: String
  city: String!
  postcode: Int!
  country: String!
  isBillingAddress: Boolean!
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
  phone: String
  billingAddress: Address @relation(name: "UserBillingAddress")
  shippingAddress: [Address!] @relation(name: "UserShippingAddresses")
  paymentId: String
  avatar: String
  cart: [CartItem!]!
  orders: [Order!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type CartItem {
  id: ID! @unique
  quantity: Int! @default(value: 1)
  item: Subscription # relationship to Subscription
  user: User! # relationship to User
}

type Subscription {
  id: ID! @unique
  title: String!
  shortDescription: String!
  longDescription: String!
  totalPrice: Int!
  mealPrice: Int!
  thumbnailImage: String
  largeImage: String
  createdAt: DateTime!
  updatedAt: DateTime!
  tag: String!
}

type Order {
  id: ID! @unique
  user: User!
  items: [OrderItem!]!
  billingAddress: Address! @relation(name: "OrderBillingAddress")
  shippingAddress: Address! @relation(name: "OrderShippingAddress")
  deliveryTime: String!
  deliveryDayOfWeek: String!
  paymentDate: DateTime!
  total: Int!
  charge: String!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type OrderItem {
  id: ID! @unique
  title: String!
  shortDescription: String!
  longDescription: String!
  totalPrice: Int!
  mealPrice: Int!
  thumbnailImage: String
  largeImage: String
  quantity: Int! @default(value: 1)
  user: User
}